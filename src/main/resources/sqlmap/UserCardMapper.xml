        select <include refid="Base_Column_List"/>
        from user_card
        where open_id=#{openId}
    </select>

    <select id="findCardByParam" parameterType="com.eqxuan.peers.dao.UserCard" resultMap="UserCardMapperResultMap">
        select <include refid="Base_Column_List"/>
