            <if test="null != appId">
                app_id=#{appId},
            </if>
            <if test="null != username">
                username=#{username},
            </if>
            <if test="null != userWechat">
                user_wechat=#{userWechat},
            </if>
            <if test="null != userCompany">
                user_company=#{userCompany},
            </if>
            <if test="null != userIndustry">
